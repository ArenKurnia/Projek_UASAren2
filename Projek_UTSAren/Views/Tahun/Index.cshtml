@{ Layout = "_Layout"; }

@model IEnumerable<Tahun>

@{ ViewData["Title"] = "Index"; }

<br />
<br />
<p>
    <a class="btn btn-info" asp-controller="Tahun" asp-action="Create">Tambah</a>
</p>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Data Tahun
    </div>
    <div class="card-body">
        <table class="table" id="datatablesSimple">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id_angkatan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tahun_angkatan)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nama_angkatan)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_angkatan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tahun_angkatan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nama_angkatan)
        </td>
        <td>
            <a asp-action="Update" asp-route-id="@item.Id_angkatan">Edit</a> |
            <a asp-action="Detail" asp-route-id="@item.Id_angkatan">Detail</a> |
            <a asp-action="Delete" asp-route-id="@item.Id_angkatan" style="color:black"
                           onclick="if (!confirm('Yakin Ingin Hapus?')) { return false;}">Hapus</a>
        </td>
    </tr>}
            </tbody>
        </table>
    </div>
</div>

